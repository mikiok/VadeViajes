

<%= stylesheet_link_tag    'locations/new_location', media: 'all' %>
<meta name="viewport" content="initial-scale=1.0, user-scalable=no">

<!-- Modal -->
<div class="modal new-location-modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-body new-location-modal-body">
				<img id="loadingMap" src="/loading.gif" style="display: block;">
			</div>
			<div class="modal-footer">
				<%= form_for [@trip, @location], url: {action: "add_location_to_trip"} do |f| %>

					<div class="coordenates">
						<%= f.text_field :name ,id: "cityName", readonly: "readonly", class: "form-control", placeholder: "City"%><br>
						<%= f.number_field :latitude ,id: "latitude", readonly: "readonly", class: "form-control", placeholder: "Latitude" %><br>
						<%= f.number_field :longitude ,id: "longitude", readonly: "readonly", class: "form-control", placeholder: "Longitude"%><br>
		  		</div>
		  		<h4>Start date:
						<%= f.date_field :initdate, id: "initDate", min: "#{@trip.initdate}", max: "#{@trip.enddate}", onkeydown: "return false", value: "#{@trip.initdate.year}-0#{@trip.initdate.month}-#{@trip.initdate.mday}"%><br /></h4>
						<h4>End date:
						<%= f.date_field :enddate, id: "endDate", min: "#{@trip.initdate}", max: "#{@trip.enddate}", onkeydown: "return false", value: "#{@trip.initdate.year}-0#{@trip.initdate.month}-#{@trip.initdate.mday}"%></h4>
	  			<%= f.submit "Add location", class: "btn btn-primary btn-footer", id: "add-location" %><br />
				<% end %>
			</div>
		</div>
	</div>
</div>
<%= javascript_include_tag 'maps'%>