<%= stylesheet_link_tag    'navbar', media: 'all' %>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <img class="brand" src="/brand.png">
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= link_to "Trips", trips_path %> <span class="sr-only">(current)</span></li>
      </ul>
      <form class="navbar-form navbar-left" role="search" action="users">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search" name="name" id="srch-term">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
            </div>
        </div>
      </form>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            <% if @current_user.avatar_file_size != nil %>
              <%= image_tag @current_user.avatar.url(:small)%>
            <% else %>
              <%= image_tag "https://www.gravatar.com/avatar/0?d=mm&f=y&s=40x40" %>
            <% end %>
            <%=@current_user.firstname%> <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Edit profile", edit_user_registration_path %></li>
            <li><a href="#">Another action</a></li>
            <li><a href="#">Something else here</a></li>
            <li role="separator" class="divider"></li>
            <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<%= javascript_include_tag 'navbar'%>
<%= javascript_include_tag 'users/user'%>